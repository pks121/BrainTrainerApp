<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1A447"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnstart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="start"
        android:padding="44dp"
        android:text="@string/start"
        android:textSize="42sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countertextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3806F68E"
                android:padding="13dp"
                android:text="@string/counter"
                android:textAlignment="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/que"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/design_default_color_error"
                android:padding="13dp"
                android:text="@string/question"
                android:textAlignment="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#30D346"
                android:padding="13dp"
                android:text="@string/_0_0"
                android:textAlignment="center"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="123dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnclick"
                android:padding="43dp"
                android:tag="0"
                android:text="@string/ans1"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/ans2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnclick"
                android:padding="43dp"
                android:tag="1"
                android:text="@string/ans2"
                android:textAlignment="center"
                android:textSize="34sp"
                app:backgroundTint="@color/teal_200" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:visibility="visible">

            <Button
                android:id="@+id/ans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnclick"
                android:padding="43dp"
                android:tag="2"
                android:text="@string/ans3"
                android:textAlignment="center"
                android:textSize="34sp"
                app:backgroundTint="@color/colblue" />

            <Button
                android:id="@+id/ans4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnclick"
                android:padding="43dp"
                android:tag="3"
                android:text="@string/ans4"
                android:textAlignment="center"
                android:textSize="34sp"
                app:backgroundTint="@color/redd" />
        </LinearLayout>

        <TextView
            android:id="@+id/correction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="64sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restart"
            android:layout_gravity="center"
            android:padding="52dp"
            android:textSize="34sp"
            android:backgroundTint="#12B535"
            />
    </LinearLayout>

</RelativeLayout>